<script>
	function check_auth(){
		let identiKey = document.getElementById('identiKey').value;

		$.post('/auth/check_identiKey', {identiKey : identiKey}, function (res) {
			var btn = document.getElementById("create_qrcode");
			if(res == "Success"){
				btn.disabled = false;
			}
			else {
				btn.disabled = true;
			}
			return(res)
		});
	}
	
</script>

<body >

	<div id="qrcode"></div>

	<div id="example" >
		<div id="tab-1">
			<ul id="gn-menu" class="gn-menu-main">
				<form name="myform" action="/auth/create_qrcode" method="post">	
					<fieldset>
						<center><legend>QR 코드 생성하기</legend></center>
						<table class="typeA">
							<tbody>
								<p style="text-align: center"> 인증 코드 입력 </p>
                                <center><input type="password" id="identiKey" name="identiKey" styleㅑ="text-align: center" placeholder="인증코드 입력" value= "" required = "true"></center>
								<center><button type="button" class="btn btn-skin scroll" style="align-self: auto;" onclick = "check_auth();" > 인증번호 확인 </button></center>
								<center><button type="submit" id="create_qrcode" class="btn btn-skin scroll" style="align-self: auto;" disabled> QR Code 만들기 </button></center>
							</tbody>
						</table>					
					</fieldset>				
				</form>
			</ul>
		</div>
	</div>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
</body>
